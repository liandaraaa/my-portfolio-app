<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelProfile"
            style="@style/HeaderTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:src="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelProfile" />

        <ProgressBar
            android:id="@+id/pbProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintEnd_toEndOf="@id/imgProfile"
            app:layout_constraintStart_toStartOf="@id/imgProfile"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelPersonalInformation"
            style="@style/HeaderTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Personal Information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProfile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelName"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPersonalInformation" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            style="@style/BodyTextView"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:text="Lianda"
            app:layout_constraintBottom_toBottomOf="@id/tvLabelName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPersonalInformation"
            app:layout_constraintTop_toTopOf="@id/tvLabelName" />

        <View
            android:id="@+id/divide_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelEmail"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divide_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEmail"
            style="@style/BodyTextView"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:text="Lianda"
            app:layout_constraintBottom_toBottomOf="@id/tvLabelEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divide_name"
            app:layout_constraintTop_toTopOf="@id/tvLabelEmail" />

        <View
            android:id="@+id/divider_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelEmail" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelPhone"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhone"
            style="@style/BodyTextView"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:text="Lianda"
            app:layout_constraintBottom_toBottomOf="@id/tvLabelPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_email"
            app:layout_constraintTop_toTopOf="@id/tvLabelPhone" />

        <View
            android:id="@+id/divider_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPhone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelAddress"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_phone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddress"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Lianda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelAddress" />

        <View
            android:id="@+id/divider_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/colorLightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddress" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelContactMe"
            style="@style/HeaderTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="Know Me More"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_address" />

        <ImageView
            android:id="@+id/imgLinkedin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@drawable/logo_linkedin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelContactMe" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLinkedin"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:text="liandaraaa"
            app:layout_constraintStart_toEndOf="@id/imgLinkedin"
            app:layout_constraintTop_toBottomOf="@id/tvLabelContactMe" />

        <ImageView
            android:id="@+id/imgGithub"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@drawable/ic_logo_github"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLinkedin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGithub"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:text="liandaraaa"
            app:layout_constraintBottom_toBottomOf="@id/imgGithub"
            app:layout_constraintStart_toEndOf="@id/imgGithub"
            app:layout_constraintTop_toTopOf="@id/imgGithub" />

        <ImageView
            android:id="@+id/imgInstagram"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@drawable/ic_logo_isntagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgGithub" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInstagram"
            style="@style/BodyTextView"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:text="liandaraaa"
            app:layout_constraintBottom_toBottomOf="@id/imgInstagram"
            app:layout_constraintStart_toEndOf="@id/imgInstagram"
            app:layout_constraintTop_toTopOf="@id/imgInstagram" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>